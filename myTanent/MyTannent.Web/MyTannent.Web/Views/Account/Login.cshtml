@model MyTannent.Web.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}


<div class="login-page bk-img" style="background-image: url(../Content/img/Houseing1.jpg);">
    <div class="form-content">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <h3 class="text-center text-bold text-light mt-4x">Sign in</h3>
                    <div class="well row pt-2x pb-3x bk-light">
                        @if (!string.IsNullOrEmpty(Convert.ToString(TempData["RegisterSuccessMsg"])))
                        {
                            <div class="alert alert-dismissible alert-success"><button type="button" class="close" data-dismiss="alert"><i class="fa fa-remove"></i></button> @TempData["RegisterSuccessMsg"]</div> 
                        }
                        <div class="col-md-8 col-md-offset-2">
                            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                            {
                                @Html.ValidationSummary(true)

                                @Html.LabelFor(m => m.UserId, new { @class = "text-uppercase text-sm" })
                                @Html.TextBoxFor(m => m.UserId, new { @class = "form-control mb" })
                                @Html.ValidationMessageFor(m => m.UserId)


                                @Html.LabelFor(m => m.password, new { @class = "text-uppercase text-sm" })
                                @Html.PasswordFor(m => m.password, new { @class = "form-control mb" })
                                @Html.ValidationMessageFor(m => m.password)

                                <div class="checkbox checkbox-circle checkbox-info">
                                @*      <input id="RememberMe" type="checkbox" checked>
                                    <label for="RememberMe">
                                        Keep me signed in
                                    </label>*@
                                  @* @Html.HiddenFor(m=> m.RememberMe)*@
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                                </div>
                                <input type="submit" value="Log in" class="btn btn-primary btn-block" />

                            }
                        </div>
                    </div>
                    <div class="text-center text-light">
                        <a href="#" class="text-light">Forgot password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


